<h2>Profile </h2>


<%= form_with model: @user do |f| %>
    <div>
        <%= image_tag(@profile.user.image, style: "width: 100px") %>
    </div>

    <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, placeholder: "#{@profile.user.name}" %>
    </div>

    <div class="field">
        <%= f.label :profession %><br />
        <%= f.text_field :profession, autofocus: true, autocomplete: "profession", placeholder: "#{@profile.user.profession}" %>
    </div>

    <div class="field">
        <%= f.label :summary %><br />
        <%= f.text_area :summary, autofocus: true, autocomplete: "summary", placeholder: "#{@profile.user.summary}" %>
    </div>

    <div class="field">
        <p> 
            <%= f.label :image %>
            <%= f.file_field :image %>
        </p>
    </div>


    <div class="actions">
        <%= f.submit "Update" %>
    </div>
<% end %>


<%= link_to "Back", :back %>
