<p>
    <% @profiles.each do |profile| %>
      <section>
        <div class="container">
          <div class="row align-items-center">
            <div class="row text-center">
                    <div class="card h-100">
                <div class="col-lg-3 col-md-6 mb-4">
                      <%= image_tag(profile.user.image, class:"card-img-top", width:"500px" ) %>
                      <div class="card-body">
                        <h4 class="card-title">  <p><%= profile.user.name%></p></h4>
                        <p class="card-text"> <p><%= profile.user.summary%></p> </p>
                      </div>
                      <div class="card-footer">
                          <div>
                            <h4 class="card-title"> <%= profile.user.profession%></h4>
                          </div>
                        <a><%= link_to 'More details', profile, class:"btn btn-primary" %></a>
                      </div>
                    </div>
                </div>
            </div>
          </div>
        </div>
      </section>
    <% end %>
</p>