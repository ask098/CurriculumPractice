


<div>
        <%= image_tag(@profile.user.image, style: "width: 100px") %>
</div>

<div>
        <label> Name:  </label>
        <%= @profile.user.name %>
</div>


<div>
        <label> Profession:  </label>
        <%= @profile.user.profession %>
</div>


<div>
        <label> Summary:  </label>
        <%= @profile.user.summary %>
</div>



<%= button_to "Delete", @profile, method: :delete %>

<%= button_to "Edit", "/profiles/#{@profile.id}/edit", method: :get %>

<h1> Experiences </h1>

<table>
  <thead style= text-align:center;>
  
    <tr>
      <th>Title</th>
      <th>Industry</th>
      <th>Description</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Actually?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody style= text-align:center;>
    <% @profile.experiences.each do |report| %>
      <tr>
        <td><%= report.title%></td>
        <td><%= report.industry %></td>
        <td><%= report.description %></td>
        <td><%= report.start_date%></td>
        <td><%= report.end_date %></td>
        <td><%= report.actually %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>