
<div>
        <%= image_tag(@profile.user.image, style: "width: 100px") %>
</div>

<div>
        <label> Name:  </label>
        <%= @profile.user.name %>
</div>

<div>
        <label> Profession:  </label>
        <%= @profile.user.profession %>
</div>

<div>
        <label> Summary:  </label>
        <%= @profile.user.summary %>
</div>

<% if user_signed_in? && current_user.id == @profile.user.id %>
        <%= link_to "Edit", "/profiles/#{@profile.id}/edit", method: :post %>
         <%= link_to "edit2", edit_user_registration_path %><br />
        <%= link_to "Delete", @profile, method: :delete %>
        <%= link_to 'Back', profiles_path %>
        <% current_user %>
        <% elsif user_signed_in? %>
                <%= link_to 'Back', "/" %>
        <% elsif %>
        <%= link_to "Sign up", new_user_registration_path %> 
        <%= link_to "Login", new_user_session_path %>
    
<% end %>


<h1> Experiences </h1>
<p><% if user_signed_in? && current_user.id == @profile.user.id %>
        <%= link_to "Add experience", "/profiles/#{params[:id]}/experiences/new", method: :post %>
<% end %></p>
<table>
  <thead style= text-align:center;>
  
    <tr>
      <th>Title</th>
      <th>Industry</th>
      <th>Description</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Actually?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody style= text-align:center;>
    <% @profile.experiences.each do |report| %>
      <tr>
        <td><%= report.title%></td>
        <td><%= report.industry %></td>
        <td><%= report.description %></td>
        <td><%= report.start_date%></td>
        <td><%= report.end_date %></td>
        <td><%= report.actually %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>